mixin pet(pet_name)
    li.pet= pet_name
ul
    +pet('cat')
    +pet('dog')
    +pet('pig')

mixin article(title)
    .article
        .article-wrapper
            h1= title
            if block
                block
            else
                p No content provided

+article(title)

+article('Hello world')
    p This is my
    p Amazing article